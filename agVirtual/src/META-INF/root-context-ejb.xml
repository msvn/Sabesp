<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <!-- =========================================================================================================== -->
    <!-- Faz o "boot" da aplicacao                                                                                   -->
    <!-- =========================================================================================================== -->

    <!-- carrega configuracao dos arquivos do diretorio padrao -->
    <bean class="com.prime.infra.config.SpringConfiguratorEjb"/>

    <!-- procura pelos Servicos, DAOs, Backing Beans e MBeans dentro das aplicacoes.

    Como o component-scan nao funciona dentro do ejb container do websphere,
    os beans da aplicacao devem ser declarados explicitamente no arquivo app-beans.xml
    -->
    <import resource="classpath:META-INF/app-beans.xml"/>

</beans>